@model ProjectASP.Models.Order

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete Order";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12 d-flex align-items-center justify-content-between mb-3">
        <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
        <h4 style="color:red">Are you sure you want to delete this?</h4>
        <form asp-action="Delete">
            <input type="hidden" asp-for="id" />
            <input type="submit" value="Delete" class="btn btn-outline-danger" id="toastrDanger" />
        </form>
    </div>
               
    <div class="row g-4">
        <div class="col-sm-6 col-xl-8">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <div class="ms-3">
                    <div>
                        <dl class="row">
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.code)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.code)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.status)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.status)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
