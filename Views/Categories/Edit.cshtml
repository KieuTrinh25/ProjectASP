@model ProjectASP.Models.Category
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Category";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-3 d-flex align-items-center justify-content-between">
            <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
        </div>
        <div class="col-12 bg-secondary text-center rounded p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="name" class="form-control" id="floatingInput" placeholder="name" />
                    <label asp-for="name" class="control-label" for="floatingInput"></label>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <textarea asp-for="description" class="form-control" placeholder="description" ></textarea>
                    <label asp-for="description" class="control-label" ></label>
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <input type="submit" value="Update" class="btn btn-outline-warning" id="toastrWarning"/>
            </form>
        </div>
    </div>
</div>